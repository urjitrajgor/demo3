<script type= "text/javascript">
  $(document).ready(function() {
    $('#user_date_of_birth').datepicker({
      ampm: true
    });
  });
</script>

<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>

  <h2>Personal Information</h2>
  <label>Name:</label>
  <div> <span><%= f.label :first_name %>:</span>
    <%= f.text_field :first_name, :maxlength => 12 %></div>

  <div ><span><%= f.label :last_name %>:</span>
    <%= f.text_field :last_name,:maxlength => 12 %></div>

  <div><%= f.label :gender %>:
    <%= f.select :gender, options_for_select([["select One",""],"Male","Female"])  %></div>

  <div><%= f.label :date_of_birth %><br />
    <%= f.text_field :date_of_birth %></div>

  <div><%= f.label :location %><br />
    <%= f.text_field :location %></div>

  <div><%= f.label :city %><br />
    <%= f.text_field :city %></div>

  <div><%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %></div>

  <div><%= f.label :skills %><br />
    <%= f.text_field :skills %></div>

  <h2>Account Information</h2>

  <div><%= f.label :user_name %><br />
    <%= f.text_field :user_name %></div>

  <div><%= f.label :email %><br />
    <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

  <div> <%= f.file_field :avatar %><br/>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
