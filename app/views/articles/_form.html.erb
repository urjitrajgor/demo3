<script type="text/javascript">
  $(document).ready(function() {
    $("#article_description").markItUp(mySettings);
  });
</script>


<%= form_for [@user,@article] do |f| %>

  <div class ="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class ="field">
    <%= f.label :topic %><br/>
    <%= f.text_field :topic %>
  </div>

  <div class ="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, :rows => 10 %>
  </div>

  <div class ="field">
    <%= f.label :published %><br/>
    <%= f.check_box("published") %>
  </div>

  <div class ="action">
    <%= f.submit %>
  </div>

<%end%>